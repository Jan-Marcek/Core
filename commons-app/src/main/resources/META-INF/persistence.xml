<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
			 version="2.0">

	<persistence-unit name="intlib">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>cz.cuni.xrg.intlib.commons.app.dpu.DPUInstanceRecord</class>
		<class>cz.cuni.xrg.intlib.commons.app.dpu.DPUTemplateRecord</class>
		<class>cz.cuni.xrg.intlib.commons.app.execution.log.LogMessage</class>
		<class>cz.cuni.xrg.intlib.commons.app.execution.context.ProcessingUnitInfo</class>
		<class>cz.cuni.xrg.intlib.commons.app.execution.context.DataUnitInfo</class>
		<class>cz.cuni.xrg.intlib.commons.app.execution.context.ExecutionContextInfo</class>		
		<class>cz.cuni.xrg.intlib.commons.app.execution.message.MessageRecord</class>
		<class>cz.cuni.xrg.intlib.commons.app.pipeline.Pipeline</class>
		<class>cz.cuni.xrg.intlib.commons.app.pipeline.PipelineExecution</class>
		<class>cz.cuni.xrg.intlib.commons.app.pipeline.graph.Edge</class>
		<class>cz.cuni.xrg.intlib.commons.app.pipeline.graph.Node</class>
		<class>cz.cuni.xrg.intlib.commons.app.pipeline.graph.PipelineGraph</class>
		<class>cz.cuni.xrg.intlib.commons.app.pipeline.graph.Position</class>
		<class>cz.cuni.xrg.intlib.commons.app.scheduling.Schedule</class>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>

			<!-- Database connection parameters are loaded at runtime from AppConfiguration -->

			<!-- Determine which element is auto discovered
			by Hibernate Entity Manager while parsing the .par archive. -->
			<property name="hibernate.archive.autodetection" value="class"/>
			<!-- SQL dialect -->
			<property name="hibernate.dialect" value="virtuoso.hibernate.VirtuosoDialect"/>
			<!-- Echo and format all executed SQL to stdout -->
			<property name="hibernate.show_sql" value="false"/>
			<property name="hibernate.format_sql" value="true"/>
			<!-- Scan for annotated classes automatically -->
			<!-- works only for classes in the same namespace
			as persistence.xml ends up after build -->
			<!--<property name="hibernate.archive.autodetection" value="class"/>-->
		</properties>
	</persistence-unit>
</persistence>
