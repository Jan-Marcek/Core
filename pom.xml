<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>cz.cuni.xrg.intlib</groupId>
	<artifactId>intlib</artifactId>
	<version>0.0.1</version>
	<packaging>pom</packaging>
	<name>intlib</name>
	<description />

	<properties>
		<!-- specify java build version for commons?, backend and frontend -->
		<project.java.version>1.7</project.java.version>
		<!-- define used vaadin version -->
		<vaadin.version>7.0.1</vaadin.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<!-- define output dirs -->
		<project.output.lib>target\lib\</project.output.lib>
		<project.output.dpu>target\dpu\</project.output.dpu>
	</properties>

	<modules>
		<module>commons</module>
		<module>commons-app</module>
		<module>commons-module</module>
		<module>commons-web</module>
		<!-- frontend is the last build -->
		<module>frontend</module>
		<module>backend</module>
		<module>libs</module>
		<!-- build modules -->
		<module>module</module>
	</modules>

	<scm>
		<url />
		<connection />
		<developerConnection />
	</scm>

	<developers>
		<!-- <developer> <id></id> <name></name> <email></email> <roles> <role>developer</role> 
			</roles> </developer> -->
	</developers>

	<contributors>
		<contributor>
			<name>Tomas Knap</name>
			<email>knap@ksi.mff.cuni.cz</email>
			<roles>
				<role>project supervisor</role>
			</roles>
			<url>http://www.ksi.mff.cuni.cz/~knap</url>
			<organization>Faculty of Mathematics and Physics, Charles University in Prague</organization>
		</contributor>
	</contributors>

	<repositories>
		<!-- odkud se bude tahat do lokalniho uloziste mavenu, muze tu byt vic 
			repositories, v jednolivych subprojektech taktez muzou byt dalsi -->
		<repository>
			<id>intlib</id>
			<url>http://gd.projekty.ms.mff.cuni.cz:9123/nexus/content/groups/public/</url>
		</repository>

		<repository>
			<id>intlib-thirdparty</id>
			<url>http://gd.projekty.ms.mff.cuni.cz:9123/nexus/content/repositories/thirdparty/</url>
		</repository>
	</repositories>

	<build>
        <pluginManagement>
            <plugins>
                <plugin>                	
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <configuration>
                        <source>${project.java.version}</source>
                        <target>${project.java.version}</target>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

</project>
