<configuration>
	
    <!-- contains configuration for FILE appender -->
    <property resource="../config.properties" />
    
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{26} - %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
	    <file>${LOG_DIRECTORY}/frontend.log</file>	    
	    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
	    	<fileNamePattern>frontend.%d.log</fileNamePattern>
	   		<maxHistory>3</maxHistory>
    	</rollingPolicy>    	
		<encoder>
			<pattern>%d [%thread] %-5level %logger{50} - %msg%n</pattern>
		</encoder>		
	</appender>
		
	<!-- TODO define logger for EclipseLink -->
	
	<logger name="org.springframework" level="WARN" />	
	
	<root level="ALL">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</root>

</configuration>